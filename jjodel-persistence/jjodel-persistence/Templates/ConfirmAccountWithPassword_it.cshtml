@model jjodel_persistence.Models.Mail.ConfirmAccountWithPassword
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Enabled on Jjodel.io</title>
</head>
<body style="font-family: Arial, sans-serif; color: #333; line-height: 1.6; margin: 0; padding: 0; background-color: #f4f4f4;">
    <div style="max-width: 600px; margin: 20px auto; background: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
        
        <p style="text-align: center; margin-bottom: 20px;">
            <img src="https://jjodel-persistence-huc4gteqe6cyevc4.italynorth-01.azurewebsites.net/assets/img/logo-pride.png" alt="Jjodel.io Logo" style="max-width: 150px; height: auto;">
        </p>
        
        <p style="font-size: 18px; font-weight: bold; text-align: center;">
            Hello @Model.Name @Model.Surname
        </p>
        
        <p style="margin: 20px 0; text-align: center;">
            You have been granted access to <strong>Jjodel.io</strong>! 🎉<br>
            To complete your registration and activate your account, please click the button below:
        </p>
        
        <p style="text-align: center;">
            <a href="@Model.Url/#/confirm/@Model.Id/@Model.Token" role="button" aria-label="Confirm your account" style="display: inline-block; background-color: #007bff; color: white; padding: 12px 20px; text-decoration: none; font-size: 16px; border-radius: 5px; font-weight: bold; margin-top: 20px;">
                Confirm your account
            </a>
        </p>
        
        <p style="margin: 20px 0; text-align: center;">
            Your temporary password is: <strong>@Model.Password</strong>.<br>
            For security reasons, we recommend changing it right after your first login.
        </p>
        
        <p style="margin: 20px 0; text-align: center;">
            If you did not create this account, you can safely ignore this email.
        </p>
        
        <p style="margin-top: 30px; text-align: center; font-size: 14px; color: #666;">
            Best regards,<br>
            <strong>The Jjodel Team</strong> 🚀
        </p>
        
    </div>
</body>
</html>
